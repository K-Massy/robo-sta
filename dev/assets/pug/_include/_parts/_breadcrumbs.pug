mixin breadcrumbs( class_name )
	nav(role="navigation", aria-label="現在位置")
		ol(class= class_name)
			li(class= class_name + "-item"): a(href= paths.root) HOME
			li(class= class_name + "-item"): a(href= "./") ./
			li(class= class_name + "-item active", aria-current="page")= page.title

+breadcrumbs( "breadcrumb" )